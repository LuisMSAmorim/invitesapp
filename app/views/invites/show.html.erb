<%= render @invite %>

<div class="invite-actions">
  <%= link_to I18n.t('views.common.back'), invites_path, class: 'btn-back' %>

  <% if current_user.admin? %>
    <%= link_to I18n.t('views.common.edit'), edit_invite_path(@invite), class: 'btn-edit' %>
    <%= button_to I18n.t('views.common.destroy'), @invite, method: :delete, class: 'btn-destroy', data: { confirm: I18n.t('views.common.confirm_destroy') } %>
  <% end %>
</div>
