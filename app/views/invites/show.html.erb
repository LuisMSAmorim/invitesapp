<%= render @invite %>

<div class="invite-actions">
  <%= link_to I18n.t('views.common.back'), invites_path, class: 'btn-back' %>

  <% if current_user.admin? %>
    <%= link_to I18n.t('views.common.edit'), edit_invite_path(@invite), class: 'btn-edit' %>
    <%= link_to I18n.t('views.common.destroy'), @invite, data: { turbo_method: :delete, turbo_confirm: I18n.t('views.common.confirm_destroy') }, class: 'btn-destroy' %>
    <%= link_to I18n.t('views.invites.inactivate.inactive'), inactivate_invite_path(@invite), data: { turbo_method: :patch, turbo_confirm: I18n.t('views.common.confirm_inactivate') }, class: 'btn-destroy' %>
  <% end %>
</div>
