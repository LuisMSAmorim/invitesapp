<%= form_with(model: company, class: 'company-form') do |form| %>
  <% if company.errors.any? %>
    <div class="error-messages">
      <ul>
        <% company.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :ceo, class: 'form-label' %>
    <%= form.text_field :ceo, class: 'form-input' %>
  </div>

  <div class="form-actions">
    <%= form.submit I18n.t('helpers.submit.generic'), class: 'submit-link' %>
  </div>
<% end %>
