<div id="<%= dom_id company %>" class="company-info">
  <p>
    <strong><%= I18n.t('activerecord.attributes.company.name') %>:</strong>
    <%= company.name %>
  </p>

  <p>
    <strong><%= I18n.t('activerecord.attributes.company.ceo') %>:</strong>
    <%= company.ceo %>
  </p>

  <p>
    <%= link_to I18n.t('views.common.show'), company, class: 'show-link' %>
  </p>
</div>
